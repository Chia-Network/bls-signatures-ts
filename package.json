{
    "name": "@rigidity/bls-signatures",
    "author": "rigidity",
    "version": "2.0.3",
    "description": "A browser friendly implementation of bls-signatures.",
    "repository": "https://github.com/Rigidity/bls-signatures.git",
    "source": "src/index.ts",
    "main": "dist/cjs/index.cjs",
    "module": "dist/esm/index.mjs",
    "bundle": "dist/bundle/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
    },
    "license": "MIT",
    "scripts": {
        "test": "mocha './dist/test/**/*.js' --require source-map-support/register --recursive --timeout 0",
        "build": "parcel build",
        "watch": "parcel watch"
    },
    "targets": {
        "main": {
            "optimize": false,
            "sourceMap": {
                "inline": true
            }
        },
        "module": {
            "optimize": false,
            "sourceMap": {
                "inline": true
            }
        },
        "bundle": {
            "context": "browser",
            "outputFormat": "global",
            "source": "src/browser.ts",
            "optimize": false,
            "includeNodeModules": [
                "jssha",
                "randombytes"
            ],
            "sourceMap": {
                "inline": true
            }
        },
        "test": {
            "context": "node",
            "source": "test/bls.ts",
            "optimize": false,
            "sourceMap": {
                "inline": true
            }
        }
    },
    "files": [
        "dist",
        "build/dist"
    ],
    "devDependencies": {
        "@parcel/packager-ts": "2.3.2",
        "@parcel/transformer-typescript-types": "2.3.2",
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/randombytes": "^2.0.0",
        "mocha": "^9.1.3",
        "parcel": "^2.3.2",
        "source-map-support": "^0.5.21",
        "typescript": ">=3.0.0"
    },
    "dependencies": {
        "chai": "^4.3.4",
        "jssha": "^3.2.0",
        "randombytes": "^2.1.0"
    }
}
