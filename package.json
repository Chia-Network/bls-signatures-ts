{
    "name": "@rigidity/bls-signatures",
    "author": "rigidity",
    "version": "1.1.0",
    "description": "An implementation of bls-signatures in TypeScript.",
    "repository": "https://github.com/Rigidity/bls-signatures.git",
    "main": "build/dist/index.js",
    "module": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "exports": {
        "import": "./dist/src/index.js",
        "require": "./build/dist/index.js"
    },
    "license": "MIT",
    "scripts": {
        "test": "mocha './dist/test/**/*.js' --require source-map-support/register --recursive --timeout 0",
        "build": "npm run build:esm && npm run build:cjs",
        "build:esm": "tsc && node build/esm.js",
        "build:cjs": "node build/cjs.js && tsc -p build/tsconfig.json"
    },
    "files": [
        "dist",
        "build/dist"
    ],
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.9",
        "mocha": "^9.1.3",
        "source-map-support": "^0.5.21"
    },
    "dependencies": {
        "chai": "^4.3.4"
    }
}
